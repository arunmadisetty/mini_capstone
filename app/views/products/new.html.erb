<div class="container">
  <h1>Add a new product into the Knicks Gear website!</h1>

  <%= form_tag "/knicksgear", method: "post" do %>
  <div class="form-group">
    Name: <input type="text" class="form-control" name="form_name">
  </div>

  <div class="form-group">
    Price: <input type="text" class="form-control" name="form_price">
  </div>

  <div class="form-group">
    Image: <input type="text" class="form-control" name="form_image">
    
  </div>

  <div>
    <select name="supplier_id">
      <% @suppliers.each do |supplier| %>
        <option><%= supplier.supplier_id supplier.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    Description: <input type="text" class="form-control" name="form_description">
  </div>
  <input type="submit" name="Add product">
  <% end %>

  
</div>
